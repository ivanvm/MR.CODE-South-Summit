extends layout.pug
block menu
    .header-container
        span.return-button(onclick='window.history.back()')
            i.fa.fa-arrow-left
        img.logo-bbva(src='/public/img/logo.png' alt='BBVA Logo')
block content
    .row
        .main-container.col
            .row
                .results-top-text.text-center.col
                    h1.text-showcase Let's check our agenda
                    h3.text-showcase-sub when do you want to fly?
                    img.date-featured-img(src='/public/img/interests/calendar.svg')
                    div.budget-text In case you are free to go anytime, we suggest skip this one. This will allow us to find for you even better offers based on your preferences. The estimation will also be closer to your budget.
                .buttons-container.col
                    button.btn.btn-primary.btn-lg.btn-block#start-date-input(type='button' onclick='dateInput()') I have a fixed date
                    input.form-control.form-control-lg#dateInput(type="datetime-local" value="2018-11-25T13:45:00")
                    button.btn.btn-primary.btn-lg.btn-block.button-margin-bottom#skip-input(type='button' onclick='window.location.href = "/returndate/?bookingdate=2018-11-25T13:45:00"') Skip for now
                    button.btn.btn-primary.btn-lg.btn-block#next-step-date(type='button' onclick='sendBookingDate()') Looks great!

block append scripts
    script.
        function dateInput () {
            document.querySelector('#start-date-input').className +=  ' hide'
            document.querySelector('#dateInput').className +=  ' show'
            document.querySelector('#skip-input').className +=  ' hide'
            document.querySelector('#next-step-date').className +=  ' show'
         }

         function sendBookingDate () {
            var date = document.getElementById('dateInput').value
            window.location.href = '/returndate/?bookingdate='+date
         }

         document.addEventListener('DOMContentLoaded', function () {
            var tl = new TimelineMax();
            tl.to('.date-featured-img', 0.5, {x:400,y:0})
                .to('.date-featured-img', 0.6, {x:0,y:0})
         })
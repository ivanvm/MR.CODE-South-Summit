extends layout

block menu
    .header-container
        span.return-button(onclick='window.history.back()')
            i.fa.fa-arrow-left
        img.logo-bbva(src='/public/img/logo.png' alt='BBVA Logo')

block content
    .row
        .final-results-top-text.text-center.col
            h1.text-showcase Ready to check-in?
            h3.text-showcase-sub this is what we found for you
            img.results-featured-img(src='/public/img/interests/world.svg' alt='Results')
        .results-cards.col-12
            .card.city(onclick='window.location.href = "/details"')
                .card-body.city-card-body
                    figure.tint
                        img.card-img(src='https://a.travel-assets.com/findyours-php/viewfinder/images/res30/20000/20541-The-West-End.jpg' alt='')
                    .card-img-overlay.text-white
                        h5.card-title Madrid
                        p.card-text 
                            span from
                            | 710,00€
                .card-footer.text-muted.text-center
                    span.city-card-date
                        a.btn.btn-secondary.disabled(href='#') 
                            i.fa.fa-clock-o
                            |  03/07 to 08/09
                    span.city-card-book
                        a.btn.btn-primary(href='/details') 
                            | View more

block append scripts
    script.
        document.addEventListener('DOMContentLoaded', function () {
            var tl = new TimelineMax;
            tl.to('.results-featured-img', 0.2, {scaleX:0.8, scaleY:0.8})
                .to('.results-featured-img', 0.25, {scaleX:1.2, scaleY:1.2})
                .to('.results-featured-img', 0.2, {scaleX:1, scaleY:1})
        })
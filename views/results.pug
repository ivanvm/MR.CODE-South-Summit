extends layout

block menu
    .header-container
        span.return-button
            i.fa.fa-arrow-left
        img.logo-bbva(src='/public/img/logo.png' alt='BBVA Logo')

block content
    .row.main-container
        .results-top-text.text-center
            h1.text-showcase Ready to check-in?
            h3.text-showcase-sub tailored to your custom experience
            img.results-featured-img(src='/public/img/interests/world.svg' alt='Results')
    each tripInfo,index in tripDestinations
        .card.city(onclick='window.location.href = "/details"')
            .card-body.city-card-body
                figure.tint
                    img.card-img(src='https://a.travel-assets.com/findyours-php/viewfinder/images/res30/20000/20541-The-West-End.jpg' alt='')
                .card-img-overlay.text-white
                    h5.card-title #{tripInfo.origin} - #{tripInfo.destination}
                    p.card-text
                        span from
                        | #{tripInfo.price}€
            .card-footer.text-muted.text-center
                span.city-card-date
                    a.btn.btn-secondary.disabled(href='#')
                        i.fa.fa-clock-o
                        |  03/07 to 08/09
                span.city-card-book
                    a.btn.btn-primary(href='/details')
                        | View more
